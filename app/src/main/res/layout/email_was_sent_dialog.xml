<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/grey_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="109dp"
        android:paddingVertical="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_topic_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/owl"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.thirtyeight.thirtyeight.presentation.ui.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/e_mail_was_sent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/caros_soft_bold"/>

        <com.thirtyeight.thirtyeight.presentation.ui.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:text="@string/please_check_your_e_mail_box"
            android:textSize="16sp"
            android:textColor="@color/grey_dark"
            android:fontFamily="@font/caros_soft_bold"/>

        <com.thirtyeight.thirtyeight.presentation.ui.CTextView
            android:id="@+id/start_button"
            style="@style/PrimaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="24dp"
            android:enabled="true"
            android:text="@string/done" />

    </LinearLayout>

    <ImageView
        android:id="@+id/owl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/diagonal_owl"
        android:layout_marginBottom="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>