<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningAppDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/mech_color_text</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Mechanics -->
        <item name="colorMechOnUnselectedButton">?colorPrimary</item>
        <item name="binColumnColor">@color/mech_grey</item>
        <!-- Input -->
        <item name="colorInputHint">@color/grey_dark</item>
        <item name="colorInputSolidInactive">@color/grey_light</item>
        <item name="colorInputStrokeInactive">@color/grey</item>

        <item name="colorInputSolidActive">@color/white</item>
        <item name="colorInputTextActive">@color/black</item>
        <item name="colorInputStrokeActive">@color/color_primary</item>

        <item name="colorInputSolidFilled">@color/color_light</item>
        <item name="colorInputTextFilled">@color/black</item>
        <item name="colorInputStrokeFilled">@color/color_primary</item>

        <item name="colorInputSolidError">@color/red_fail_light</item>
        <item name="colorInputTextError">@color/black</item>
        <item name="colorInputStrokeError">@color/red_fail</item>
        <item name="colorError">@color/red_fail</item>
    </style>

    <style name="Theme.LessonDescription" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/mech_color_text</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Mechanics -->
        <item name="colorMechOnUnselectedButton">?colorPrimary</item>
        <item name="binColumnColor">@color/mech_grey</item>
        <!-- Input -->
        <item name="colorInputHint">@color/grey_dark</item>
        <item name="colorInputSolidInactive">@color/grey_light</item>
        <item name="colorInputStrokeInactive">@color/grey</item>

        <item name="colorInputSolidActive">@color/white</item>
        <item name="colorInputTextActive">@color/black</item>
        <item name="colorInputStrokeActive">@color/color_primary</item>

        <item name="colorInputSolidFilled">@color/color_light</item>
        <item name="colorInputTextFilled">@color/black</item>
        <item name="colorInputStrokeFilled">@color/color_primary</item>

        <item name="colorInputSolidError">@color/red_fail_light</item>
        <item name="colorInputTextError">@color/black</item>
        <item name="colorInputStrokeError">@color/red_fail</item>
        <item name="colorError">@color/red_fail</item>
    </style>

    <style name="MechTextViewStyle">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MechCustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MechCustomMaterialButtonStyle.TinderPage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MechButtonStyle">
        <item name="android:layout_height">@dimen/mech_button_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MechPrimaryButtonStyle" parent="MechButtonStyle">
        <item name="android:background">@drawable/background_mech_button_primary</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="MechButtonWithPrimaryBorderStyle" parent="MechButtonStyle">
        <item name="android:background">@drawable/background_mech_button_with_primary_variant_borders</item>
        <item name="android:textColor">?attr/colorMechOnUnselectedButton</item>
    </style>

    <style name="MechGapButtonStyle" parent="MechButtonWithPrimaryBorderStyle">
        <item name="android:foreground">@null</item>
    </style>

    <style name="MechanicTextViewStyle" parent="MechTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MechBinButtonStyle">
        <item name="android:layout_height">@dimen/mech_button_height</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_mech_button_primary</item>
    </style>

    <style name="MechBinFallingItemTextStyle" parent="MechTextViewStyle">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- App -->

    <style name="TextViewStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="EditTextStyle" parent="TextViewStyle">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHighlight">?colorPrimary</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/mech_color_text</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Bottom sheet -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/caros_soft_medium</item>
    </style>

    <!-- Input -->

    <style name="InputLabelTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/input_label_text_size</item>
        <item name="android:fontFamily">@font/caros_soft_bold</item>
    </style>

    <style name="InputEditTextStyle" parent="EditTextStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:fontFamily">@font/caros_soft_medium</item>
        <item name="android:paddingStart">@dimen/input_radius</item>
        <item name="android:paddingEnd">@dimen/input_radius</item>
        <item name="android:background">@drawable/background_input_inactive</item>
        <item name="android:textColorHint">?colorInputHint</item>
    </style>

    <style name="InputErrorTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/input_error_text_size</item>
        <item name="android:fontFamily">@font/caros_soft</item>
        <item name="android:textColor">?colorError</item>
    </style>

    <!-- Auth -->

    <style name="ButtonStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_button_primary_selector</item>
        <item name="android:textColor">@color/color_button_primary_text</item>
    </style>

    <style name="WhiteButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_button_white_selector</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="GreyButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_mech_button_grey</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="NoBackgroundButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="GoogleLoginButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_google_button</item>
    </style>

    <style name="GoogleLoginTextStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FacebookLoginButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/background_facebook_button</item>
    </style>

    <style name="FacebookLoginTextStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegisterTermsLabelStyle" parent="TextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontFamily">@font/caros_soft_medium</item>
    </style>

    <style name="my_topics_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lesson_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Bottom sheet dialog  -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_dialog_background</item>
    </style>

    <!-- Style for SENTENCE GAP -->
    <style name="SentenceGapButtonReady" parent="MechButtonStyle">
        <item name="android:background">@drawable/background_btn_ready</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
<!--    <style name="SentenceGapSelectText" parent=""-->

</resources>