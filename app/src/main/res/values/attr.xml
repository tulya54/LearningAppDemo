<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorMechOnUnselectedButton" format="reference|color" />
    <attr name="binColumnColor" format="reference|color" />

    <!-- Input -->
    <attr name="colorInputHint" format="reference|color" />

    <attr name="colorInputSolidInactive" format="reference|color" />
    <attr name="colorInputStrokeInactive" format="reference|color" />

    <attr name="colorInputSolidActive" format="reference|color" />
    <attr name="colorInputTextActive" format="reference|color" />
    <attr name="colorInputStrokeActive" format="reference|color" />

    <attr name="colorInputSolidFilled" format="reference|color" />
    <attr name="colorInputTextFilled" format="reference|color" />
    <attr name="colorInputStrokeFilled" format="reference|color" />

    <attr name="colorInputSolidError" format="reference|color" />
    <attr name="colorInputTextError" format="reference|color" />
    <attr name="colorInputStrokeError" format="reference|color" />

    <declare-styleable name="BaseMatrixItem">
        <attr name="gridWidth" format="dimension" />
        <attr name="gridHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StreakView">
        <attr name="streakColor" format="color" />
        <attr name="streakWidth" format="dimension" />
        <attr name="strekGrid" format="reference" />
        <attr name="rememberStreakLine" format="boolean" />
        <attr name="interactive" format="boolean" />
        <attr name="snapToGrid" format="enum">
            <enum name="NONE" value="0" />
            <enum name="START_END" value="1" />
            <enum name="ALWAYS_SNAP" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GridLine">
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="gridColumnCount" format="integer" />
        <attr name="gridRowCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="LetterGrid">
        <attr name="letterSize" format="dimension" />
        <attr name="letterColor" format="color" />
        <attr name="selectedLetterColor" format="color" />
    </declare-styleable>


    <declare-styleable name="WordSearchLayout">
        <attr name="gridLineVisibility" format="boolean" />

        <attr name="gridWidth" />
        <attr name="gridHeight" />

        <attr name="gridColumnCount" />
        <attr name="gridRowCount" />

        <attr name="lineColor" />
        <attr name="lineWidth" />

        <attr name="letterSize" />
        <attr name="letterColor" />
        <attr name="selectedLetterColor" />

        <attr name="streakWidth" />
        <attr name="snapToGrid" />
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="label" format="string" />
        <attr name="android:hint" />
        <attr name="android:maxLength" />
        <attr name="android:textAllCaps" />
        <attr name="android:inputType" />
        <attr name="android:text" />
        <attr name="android:drawableEnd" />
        <attr name="readOnly" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DefaultAvatarLayout">
        <attr name="android:src" />
        <attr name="android:checked" />
    </declare-styleable>

    <declare-styleable name="SettingsItemLayout">
        <attr name="android:src" />
        <attr name="android:text" />
    </declare-styleable>

</resources>